- model_class = Project
.page-header
  %h3= @project.title
  %h3
    %small
      Organization - #{tenant_name @project.tenant_id}
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:title)
      \:
  %dd= @project.title
  %dt
    %strong
      = model_class.human_attribute_name(:details)
      \:
  %dd= @project.details
  %dt
    %strong
      = model_class.human_attribute_name(:expected_completion_date)
      \:
  %dd= @project.expected_completion_date
  %dt
    %strong
      = model_class.human_attribute_name(:tenant_id)
      \:
  %dd= @project.tenant_id
%h3 Artifacts
= render 'artifacts/list', artifacts: @project.artifacts
%br/
= link_to '< Back to Organization Home', root_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_tenant_project_path(project: @project, tenant: @project.tenant_id),  :class => 'btn btn-default'
= link_to 'Edit Project Users', users_tenant_project_path(tenant_id: @project.tenant_id, id: @project.id), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")),tenant_project_path(@project.tenant, @project),:method => 'delete',:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm",:default => 'Are you sure?')) },:class => 'btn btn-danger'
