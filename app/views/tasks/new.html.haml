- model_class = Task

.row
  .col-md-6.offset-md-3
    .card
      .card-header
        %h3 New Task
      .card-body
        .card-text
          = render 'form'
      .card-footer
        = link_to 'Show', tenant_project_tasks_path
        \|
        = link_to 'Back', tenant_project_path(Tenant.current_tenant_id, @task.project_id)